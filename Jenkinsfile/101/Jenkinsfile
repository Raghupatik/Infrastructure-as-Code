node {

	def mvn_home
	
	stage('Prepare') {
		checkout scm
		mvn_home = tool name: 'maven_home'
	}

	stage('Cleanup') {
		target = new File('target')
		if ( target.exists() ){
			target.deleteDir()
		}
		assert !target.exists()
	}

	stage('Build') {
		sh "mvn package"
	}

	stage('Verify package exists') {
		package = new File("target/grants.war")
		assert package.exists()
	}

	stage('Results'){
		junit '**/target/surefire-reports/*.xml'
	}


}