node {

	def mvn_home
	def app_dir = "Jenkinsfile/101"

	stage('Prepare') {
		checkout scm
		mvn_home = tool name: 'maven_home'
	}

	stage('Cleanup') {
		dir(app_dir) {
			target = new File('target')
			if ( target.exists() ){
				target.deleteDir()
			}
			assert !target.exists()
		}
	}

	stage('Build') {
		dir (app_dir) {
			sh "mvn package"
		}
	}

	stage('Verify package exists') {
		dir(app_dir) {
			def app_package = new File("target/grants.war")
			assert app_package.exists()
		}
	}

	stage('Results'){
		dir(app_dir) {
			junit '**/target/surefire-reports/*.xml'
		}
	}


}